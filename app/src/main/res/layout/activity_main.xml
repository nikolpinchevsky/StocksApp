<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="@dimen/screen_padding">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_brand"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/text_dark"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnNike"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="@dimen/title_bottom_margin"/>

    <Button
        android:id="@+id/btnNike"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/nike"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:backgroundTint="@color/nike_orange"
        android:textColor="@color/text_white"
        app:cornerRadius="@dimen/button_corner_radius"
        android:elevation="@dimen/button_elevation"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAmazon"
        android:layout_marginBottom="@dimen/button_spacing"/>

    <Button
        android:id="@+id/btnAmazon"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/amazon"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:backgroundTint="@color/amazon_yellow"
        android:textColor="@color/text_white"
        app:cornerRadius="@dimen/button_corner_radius"
        android:elevation="@dimen/button_elevation"
        app:layout_constraintTop_toBottomOf="@id/btnNike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnApple"
        android:layout_marginBottom="@dimen/button_spacing"/>

    <Button
        android:id="@+id/btnApple"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/apple"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:backgroundTint="@color/apple_teal"
        android:textColor="@color/text_white"
        app:cornerRadius="@dimen/button_corner_radius"
        android:elevation="@dimen/button_elevation"
        app:layout_constraintTop_toBottomOf="@id/btnAmazon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>